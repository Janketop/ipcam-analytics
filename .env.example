# =======================
# Настройки бэкенда
# =======================
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=ipcam
POSTGRES_USER=ipcam
POSTGRES_PASSWORD=ipcam
# Список RTSP-источников через запятую, каждый в формате ИМЯ|URL, пример: "cam1|rtsp://user:pass@host:554/stream1"
RTSP_SOURCES=cam1|rtsp://user:pass@host:554/stream1

# Настройки веб-интерфейса
BACKEND_PORT=8000
FRONTEND_PORT=3000
PUBLIC_BASE_URL=http://localhost:3000

# Настройки приватности по умолчанию
FACE_BLUR=true
RETENTION_DAYS=7
AGGREGATED_ONLY=true

# Визуализация разметки (рамки/скелет) на кадрах и в live-потоке (MJPEG)
VISUALIZE=true
